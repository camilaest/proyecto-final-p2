<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.uniquindio.edu.co.poo.sistemadeenviosp2.viewController.AdminDashboardViewController">
    <top>
        <HBox spacing="16" styleClass="header">
            <Label text="Dashboard Administrador" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="Cerrar sesión" onAction="#onLogout" styleClass="danger-button" />
        </HBox>
    </top>
    <center>
        <TabPane>
            <tabs>
                <Tab text="Clientes" closable="false">
                    <VBox spacing="10">
                        <padding><Insets topRightBottomLeft="15"/></padding>
                        <TableView fx:id="tblClientes" VBox.vgrow="ALWAYS" >
                            <columns>
                                <TableColumn fx:id="colClienteNombre" text="Nombre" prefWidth="150" />
                                <TableColumn fx:id="colClienteId" text="Cédula" prefWidth="100" />
                                <TableColumn fx:id="colClienteUsuario" text="Usuario" prefWidth="120" />
                                <TableColumn fx:id="colClienteEmail" text="Email" prefWidth="160" />
                                <TableColumn fx:id="colClienteTelefono" text="Teléfono" prefWidth="120" />
                            </columns>
                        </TableView>
                        <TitledPane text="Registrar nuevo cliente" expanded="false" >
                            <VBox spacing="8">
                                <padding><Insets topRightBottomLeft="10"/></padding>
                                <GridPane hgap="10" vgap="8">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="25" />
                                        <ColumnConstraints percentWidth="25" />
                                        <ColumnConstraints percentWidth="25" />
                                        <ColumnConstraints percentWidth="25" />
                                    </columnConstraints>
                                    <children>
                                        <TextField fx:id="txtCliNombre" promptText="Nombre completo" />
                                        <TextField fx:id="txtCliId" promptText="Cédula" GridPane.columnIndex="1" />
                                        <TextField fx:id="txtCliUsuario" promptText="Usuario" GridPane.columnIndex="2" />
                                        <PasswordField fx:id="txtCliPass" promptText="Contraseña" GridPane.columnIndex="3" />

                                        <TextField fx:id="txtCliTelefono" promptText="Teléfono" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtCliEmail" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtCliEdad" promptText="Edad" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtCliMonto" promptText="Monto" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                                    </children>
                                </GridPane>
                                <Button text="Registrar cliente" onAction="#onRegistrarCliente" styleClass="secondary-button" />
                            </VBox>
                        </TitledPane>
                        <Button text="Eliminar cliente seleccionado" onAction="#onEliminarCliente" styleClass="danger-button" />
                    </VBox>
                </Tab>
                <Tab text="Repartidores" closable="false">
                    <VBox spacing="10">
                        <padding><Insets topRightBottomLeft="15"/></padding>
                        <TableView fx:id="tblRepartidores" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colRepNombre" text="Nombre" prefWidth="160" />
                                <TableColumn fx:id="colRepId" text="Cédula" prefWidth="100" />
                                <TableColumn fx:id="colRepUsuario" text="Usuario" prefWidth="120" />
                                <TableColumn fx:id="colRepEmail" text="Email" prefWidth="160" />
                                <TableColumn fx:id="colRepTelefono" text="Teléfono" prefWidth="120" />
                            </columns>
                        </TableView>
                        <TitledPane text="Registrar nuevo repartidor" expanded="false">
                            <VBox spacing="8">
                                <padding><Insets topRightBottomLeft="10"/></padding>
                                <GridPane hgap="10" vgap="8">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="25" />
                                        <ColumnConstraints percentWidth="25" />
                                        <ColumnConstraints percentWidth="25" />
                                        <ColumnConstraints percentWidth="25" />
                                    </columnConstraints>
                                    <children>
                                        <TextField fx:id="txtRepNombre" promptText="Nombre completo" />
                                        <TextField fx:id="txtRepId" promptText="Cédula" GridPane.columnIndex="1" />
                                        <TextField fx:id="txtRepUsuario" promptText="Usuario" GridPane.columnIndex="2" />
                                        <PasswordField fx:id="txtRepPass" promptText="Contraseña" GridPane.columnIndex="3" />

                                        <TextField fx:id="txtRepTelefono" promptText="Teléfono" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtRepEmail" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtRepEdad" promptText="Edad" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                    </children>
                                </GridPane>
                                <Button text="Registrar repartidor" onAction="#onRegistrarRepartidor" styleClass="secondary-button" />
                            </VBox>
                        </TitledPane>
                        <Button text="Eliminar repartidor seleccionado" onAction="#onEliminarRepartidor" styleClass="danger-button" />
                    </VBox>
                </Tab>
                <Tab text="Envíos" closable="false">
                    <VBox spacing="10">
                        <padding><Insets topRightBottomLeft="15"/></padding>
                        <TableView fx:id="tblEnvios" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colEnvioId" text="ID" prefWidth="100" />
                                <TableColumn fx:id="colEnvioOrigen" text="Origen" prefWidth="200" />
                                <TableColumn fx:id="colEnvioDestino" text="Destino" prefWidth="200" />
                                <TableColumn fx:id="colEnvioCosto" text="Costo" prefWidth="100" />
                                <TableColumn fx:id="colEnvioEstado" text="Estado" prefWidth="120" />
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>
                <Tab text="Empresa" closable="false">
                    <VBox spacing="10" alignment="CENTER">
                        <padding><Insets topRightBottomLeft="30"/></padding>
                        <Label text="Monto actual de la empresa" />
                        <Label fx:id="lblMontoEmpresa" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>